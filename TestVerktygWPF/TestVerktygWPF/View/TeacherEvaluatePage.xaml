<Page x:Class="TestVerktygWPF.View.TeacherEvaluatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestVerktygWPF.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="TeacherEvaluatePage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="Fårga"></Label>
            <TextBlock Name="txtBlockQuestion" Text="Frågan"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="TxtBoxStudentAnswer" Text="Elevens svar"/>
                <StackPanel Orientation="Vertical" Margin="20,0,20,0">
                    <CheckBox Content="Rätt" Name="cbCorrectAnswer"/>
                    <CheckBox Content="Fel" Name="cbWrongAnswer"/>
                </StackPanel>
                <TextBox Name="TxtBoxTeacherFeedback" Text="Feedback"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Name="btnPreviousQueston" Content="Föregående fråga" Margin="0,0,10,0"/>
                <Button Name="btnNextQuestion" Content="Nästa fråga" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
