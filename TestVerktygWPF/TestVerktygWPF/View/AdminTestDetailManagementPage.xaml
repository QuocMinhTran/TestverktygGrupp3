<Page x:Class="TestVerktygWPF.View.AdminTestDetailManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestVerktygWPF.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="AdminTestDetailManagementPage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Name="TextBlockTestName" Text="Namn på provet"/>
            <TextBlock Name="TextBlockCourse" Text="Kurs"/>
            <TextBlock Name="TextBlockTeacherName" Text="Lärare"/>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <ListView Name="ListViewQuestionAndAnswer"/>
                <TextBox Name="TextBoxAdminFeedback" Text="Admins Kommentarer"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Name="BtnSendBackToTeacher" Content="Skicka till Lärare"/>
                <Button Name="BtnSendTestToStudent" Content="Skicka till Elever" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>


    </Grid>
</Page>
