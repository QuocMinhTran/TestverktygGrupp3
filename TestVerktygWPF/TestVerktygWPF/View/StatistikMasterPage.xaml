<Page x:Class="TestVerktygWPF.View.StatistikMasterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestVerktygWPF.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="StatistikMasterPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Row="0" HorizontalAlignment="Left" >
            <ComboBoxItem Content="--Välj prov--" IsSelected="True"  />
        </ComboBox>
        <ComboBox Grid.Row="0" HorizontalAlignment="Right">
            <ComboBoxItem Content="--Välj elev--" IsSelected="True"/>
        </ComboBox>
        <StackPanel x:Name="spClass" Grid.Row="1" >
            <TextBlock Text="Namn på provet:">
                <TextBlock x:Name="tbNameOfTest" Text="Namn" ></TextBlock>
            </TextBlock>
            <TextBlock Text="Genomsnitts tid på provet">
                <TextBlock x:Name="tbAverageTimeOnTest" Text="Time"></TextBlock>
            </TextBlock>
            <TextBlock Text="Genomsnitts betyg">
                <TextBlock Text="Bind Elev och betyg"></TextBlock>
            </TextBlock>
            <ListView Name="ListViewTests">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Elev" Width="120" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="Betyg" Width="50" DisplayMemberBinding="{Binding Age}" />
                        <GridViewColumn Header="Tid" Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Mail}" TextDecorations="Underline" Foreground="Blue" Cursor="Hand" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

            </ListView>
        </StackPanel>
        <!--<StackPanel x:Name="spStudent" Grid.Row="1" Orientation="Horizontal">
            <TextBlock x:Name="tbTestName" Margin="10,0" Text="Provnamn"/>
            <TextBlock x:Name="tbGrade" Margin="10,0" Text="Betyg"/>
            <TextBlock x:Name="tbDate" Margin="10,0" Text="Datum"/>
            <TextBlock x:Name="tbTime" Margin="10,0" Text="Tid"/>
        </StackPanel>-->
    </Grid>
</Page>
