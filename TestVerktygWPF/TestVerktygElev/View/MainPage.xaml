<Page x:Class="TestVerktygElev.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestVerktygElev"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MainPage">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Name="TextBlockUserWelcome"
                   Text="Välkommmen (elev)"
                   FontSize="18"
                   Grid.Column="0"
                   Grid.Row="0" />

        <StackPanel Grid.Column="0" Grid.Row="1" Margin="5">
            <Label Content="Prov som ska göras" FontSize="14" />
            <DataGrid Name="IncompleteTests" Grid.Column="0" />
        </StackPanel>

        <Button Name="btnLogOut" 
                Click="btnLogOut_Click" 
                Content="Logga ut" 
                Grid.Column="0" 
                Grid.Row="2" 
                HorizontalAlignment="Left" 
                Margin="10,10" />
    </Grid>
</Page>
