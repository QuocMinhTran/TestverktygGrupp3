                   Grid.Column="0"
                   Grid.Row="0" />
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="5" >
            <Label Content="Prov som ska göras" FontSize="14" />
            <Label Content="Dubbelklicka för att starta ett prov" FontFamily="12" Foreground="Gray" />
